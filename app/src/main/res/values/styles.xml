<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application light theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:editTextColor">@color/textColorPrimary</item>
        <item name="android:windowBackground">@drawable/background_image</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <!-- Splash Activity theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--Text Shadow-->
    <style name="WeatherDetailsOverlayText">
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:paddingBottom">@dimen/layout_padding</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/layout_text_size</item>
        <item name="android:shadowColor">@color/textColorShadow</item>
        <item name="android:shadowDx">@dimen/layout_shadow</item>
        <item name="android:shadowDy">@dimen/layout_shadow</item>
        <item name="android:shadowRadius">@dimen/layout_shadow</item>
    </style>

    <style name="HintInputTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">22dp</item>
        <item name="colorAccent">@color/textColorPrimary</item>
    </style>

    <style name="InputTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textColorHint">#ff000000</item>
        <item name="android:textSize">24dp</item>
        <item name="colorAccent">#ff000000</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffff0000</item>
        <item name="android:textColorHint">#ffff0000</item>
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">#ffff0000</item>
    </style>
</resources>