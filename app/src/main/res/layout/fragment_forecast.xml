<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_container"
    style="@style/WeatherDetailsOverlayText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hristiyantodorov.weatherapp.ui.fragment.forecasthourly.ForecastHourlyFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_forecast_hourly"
        style="@style/WeatherDetailsOverlayText"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_forecast_not_available"
            android:layout_width="@dimen/no_dimens"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:fontFamily="casual"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/all_txt_forecast_not_available"
            android:textAlignment="center"
            android:textSize="@dimen/material_design_subheading_txt_size"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_forecast"
            android:layout_width="@dimen/no_dimens"
            android:layout_height="@dimen/no_dimens"
            android:layout_margin="@dimen/margin_between_elements_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_forecast_hourly" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.SwipeRefreshLayout>