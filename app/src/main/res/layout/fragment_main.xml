<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_between_elements_default"
    tools:context=".ui.fragment.main.MainFragment">

    <android.support.constraint.Guideline
        android:id="@+id/half_screen_guideline"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


    <ImageButton
        android:id="@+id/image_btn_pick_from_location"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="wrap_content"
        android:background="@drawable/animated_button"
        app:layout_constraintBottom_toTopOf="@+id/txt_pick_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/txt_pick_location"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_screen_margin_between_elements"
        android:text="@string/main_screen_option_pick_location"
        android:textSize="@dimen/main_screen_labels_size"
        app:layout_constraintBottom_toTopOf="@+id/image_btn_pick_from_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_btn_pick_from_location" />

    <ImageButton
        android:id="@+id/image_btn_pick_from_list"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="wrap_content"
        android:background="@drawable/animated_button"
        app:layout_constraintBottom_toTopOf="@+id/txt_pick_from_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_pick_location"
        app:srcCompat="@drawable/ic_book" />

    <TextView
        android:id="@+id/txt_pick_from_list"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_option_pick_from_list"
        android:textSize="@dimen/main_screen_labels_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_btn_pick_from_list" />

</android.support.constraint.ConstraintLayout>