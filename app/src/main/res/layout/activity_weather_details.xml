<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="visible"/>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:context=".ui.activity.weatherdetails.WeatherDetailsActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_basic_forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_bar_basic_forecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimaryDark"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:titleEnabled="false">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/weatherDetailsTransparentBackground">

                    <ImageView
                        android:id="@+id/img_current_weather_icon"
                        android:layout_width="@dimen/weather_details_icon_current_weather_size"
                        android:layout_height="@dimen/weather_details_icon_current_weather_size"
                        android:layout_margin="@dimen/activity_vertical_margin"
                        android:contentDescription="@null"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax"
                        app:layout_constraintBottom_toTopOf="@+id/txt_last_updated"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_last_updated"
                        style="@style/WeatherDetailsOverlayText"
                        android:layout_width="@dimen/no_dimens"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_vertical_margin"
                        android:paddingEnd="@dimen/activity_vertical_margin"
                        android:textSize="@dimen/weather_details_last_updated_text_size"
                        android:textStyle="italic"
                        app:layout_collapseMode="pin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/img_current_weather_icon"
                        tools:text="Last updated: " />

                    <TextView
                        android:id="@+id/txt_location_name"
                        android:layout_width="@dimen/no_dimens"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_between_elements_default"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:textSize="@dimen/material_design_headline_txt_size"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_current_weather_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Current Location" />

                    <TextView
                        android:id="@+id/txt_summary"
                        android:layout_width="@dimen/no_dimens"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_between_elements_default"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:textSize="@dimen/material_design_title_txt_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img_current_weather_icon"
                        app:layout_constraintTop_toBottomOf="@id/txt_location_name"
                        tools:text="Mostly Cloudy" />

                    <TextView
                        android:id="@+id/txt_current_temperature"
                        android:layout_width="@dimen/no_dimens"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_between_elements_default"
                        android:drawableStart="@drawable/ic_wall_thermometer"
                        android:drawableLeft="@drawable/ic_wall_thermometer"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/margin_between_elements_default"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:text="@string/txt_current_temp_celsius"
                        android:textSize="@dimen/material_design_title_txt_size"
                        android:textStyle="bold"
                        app:layout_collapseMode="pin"
                        app:layout_constraintStart_toEndOf="@id/img_current_weather_icon"
                        app:layout_constraintTop_toBottomOf="@+id/txt_summary" />

                    <TextView
                        android:id="@+id/txt_wind_speed"
                        android:layout_width="@dimen/no_dimens"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_between_elements_default"
                        android:drawableStart="@drawable/ic_wind_sock"
                        android:drawableLeft="@drawable/ic_wind_sock"
                        android:drawablePadding="@dimen/margin_between_elements_default"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/margin_between_elements_default"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:textSize="@dimen/material_design_title_txt_size"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/img_current_weather_icon"
                        app:layout_constraintTop_toBottomOf="@+id/txt_current_temperature"
                        tools:text="15m/s" />

                </android.support.constraint.ConstraintLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout_forecast_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_forecasts_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>

</android.support.constraint.ConstraintLayout>