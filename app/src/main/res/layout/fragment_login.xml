<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    style="@style/WeatherDetailsOverlayText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    tools:context=".ui.fragment.login.LoginFragment">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ramotion.circlemenu.CircleMenuView
        android:id="@+id/circle_menu_login"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="@dimen/no_dimens"
        app:button_colors="@array/colors"
        app:button_icons="@array/icons"
        app:icon_menu="@drawable/ic_social_media"
        app:layout_constraintBottom_toTopOf="@+id/line_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hristiyantodorov.weatherapp.view.LineTextView
        android:id="@+id/line_text_view"
        style="@style/WeatherDetailsOverlayText"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:text="@string/login_screen_line_text_view_text"
        android:textSize="@dimen/login_screen_line_text_text_size"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@id/text_input_username"
        app:layout_constraintEnd_toEndOf="@+id/text_input_username"
        app:layout_constraintStart_toStartOf="@+id/text_input_username" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_username"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_between_elements_default"
        android:layout_marginBottom="@dimen/margin_between_elements_default"
        android:background="@drawable/background_edt"
        android:hint="@string/login_screen_username_hint"
        android:textColorHint="@color/transparentBlack"
        app:layout_constraintBottom_toTopOf="@+id/text_input_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_between_elements_default"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_avatar"
            android:drawableLeft="@drawable/ic_avatar"
            android:drawablePadding="@dimen/login_screen_icon_padding"
            android:paddingStart="@dimen/login_screen_icon_padding"
            android:paddingLeft="@dimen/login_screen_icon_padding"
            android:paddingEnd="@dimen/login_screen_icon_padding"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_password"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_between_elements_default"
        android:background="@drawable/background_edt"
        android:hint="@string/login_screen_password_hint"
        android:textColorHint="@color/transparentBlack"
        app:layout_constraintBottom_toTopOf="@+id/btn_sign_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_between_elements_default"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_padlock"
            android:drawableLeft="@drawable/ic_padlock"
            android:drawablePadding="@dimen/login_screen_icon_padding"
            android:inputType="textPassword"
            android:paddingStart="@dimen/login_screen_icon_padding"
            android:paddingLeft="@dimen/login_screen_icon_padding"
            android:paddingEnd="@dimen/login_screen_icon_padding" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_sign_in"
        style="@style/WeatherDetailsOverlayText"
        android:layout_width="@dimen/no_dimens"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_between_elements_default"
        android:background="@drawable/animated_button"
        android:text="@string/login_screen_btn_sign_in"
        android:textSize="@dimen/fragment_locations_list_button_sign_in_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>